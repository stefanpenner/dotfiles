[user]
  name = Stefan Penner
  email = stef@iamstef.net
  gpgsign = true
[alias]
  last = log -1 HEAD
  p = push
  l = log
  c = commit -v
  s = status
  a = add
  d = diff
  co = checkout
  cp = cherry-pick
  la = "!git config -l | grep alias | cut -c 7-"
  pr  = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
  pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
  quick-stats = ! /usr/local/bin/git-quick-stats
[push]
	default = simple
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[diff]
  tool = vimdiff
	wsErrorHighlight = all

[includeIf "gitdir:~/l/"]
 path = .gitconfig-linkedin
[includeIf "gitdir:~/tmp/"]
 path = .gitconfig-linkedin
[core]
	excludesfile = /Users/spenner/.config/git/ignore
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[protocol "file"]
	allow = always
[user]
    signingkey = /Users/stef/Library/Containers/com.maxgoedjen.Secretive.SecretAgent/Data/PublicKeys/fac20ea41ba81247b7fe0e5ad5fdd599.pub
[commit]
    gpgsign = true
[gpg]
    format = ssh
[gpg "ssh"]
    allowedSignersFile = ~/.gitallowedsigners
